{
  "family": "bear-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::277677909587:role/ecsTaskExecutionRole",
  "cpu": "4096",
  "memory": "8192",
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "277677909587.dkr.ecr.ap-northeast-1.amazonaws.com/mysql-custom:latest",
      "portMappings": [{ "containerPort": 3306, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "MYSQL_ROOT_PASSWORD", "value": "root" },
        { "name": "MYSQL_DATABASE", "value": "ticket" },
        { "name": "MYSQL_USER", "value": "root" },
        { "name": "MYSQL_PASSWORD", "value": "root" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/bear-service",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "mysql"
        }
      },
      "cpu": 1024,
      "memory": 2048
    },
    {
      "name": "php-fpm",
      "image": "277677909587.dkr.ecr.ap-northeast-1.amazonaws.com/bear-docker-fpm:latest",
      "portMappings": [{ "containerPort": 9000, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "TKT_DB_HOST", "value": "mysql" },
        { "name": "TKT_DB_PORT", "value": "3306" },
        { "name": "TKT_DB_NAME", "value": "ticket" },
        { "name": "TKT_DB_USER", "value": "root" },
        { "name": "TKT_DB_PASS", "value": "root" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/bear-service",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "php-fpm"
        }
      },
      "cpu": 1024,
      "memory": 2048
    },
    {
      "name": "frontend",
      "image": "277677909587.dkr.ecr.ap-northeast-1.amazonaws.com/bear-docker-frontend:latest",
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/bear-service",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "frontend"
        }
      },
      "cpu": 512,
      "memory": 1024
    },
    {
      "name": "nginx",
      "image": "277677909587.dkr.ecr.ap-northeast-1.amazonaws.com/bear-docker-nginx:latest",
      "portMappings": [{ "containerPort": 80, "protocol": "tcp" }],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/bear-service",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "cpu": 512,
      "memory": 1024
    }
  ]
}

